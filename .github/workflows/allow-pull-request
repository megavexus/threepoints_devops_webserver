name: ci-mariapaula_cevallos-pull-request

on:
  pull_request:
    types: [opened, synchronize]

jobs:
  analyze-code:
    runs-on: ubuntu-latest

    steps:
      - name: Verificar Pull Request permitido o no
        run: |
          if [ -f "allow_pull_request.txt" ]; then
            echo "allow_pull=true" >> $GITHUB_ENV
          else
            echo "allow_pull=false" >> $GITHUB_ENV
            echo "Impidiendo Pull Request"
            exit 1
          fi

      - name: Pruebas de SAST
        run: echo "Ejecuci√≥n de pruebas de SAST"

      - name: Pull Request permitido o no
        run: |
          if [ "${{ env.allow_pull }}" = "true" ]; then
            echo "Permitiendo Pull Request"
          else
            echo "Build fallida. Impidiendo Pull Request"
            exit 1
          fi
